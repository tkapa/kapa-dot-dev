@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudText Typo="Typo.h3" Color="Color.Inherit" Class="ml-3">Tylah Kapa</MudText>
        <MudText Typo="Typo.subtitle1" Color="Color.Inherit" Class="ml-3">Software Engineer, Games Developer</MudText>
        <MudSpacer />
        <MudSwitch @bind-Checked="@_isDarkMode" 
            ThumbIcon="@(_isDarkMode ? Icons.Filled.WbSunny : Icons.Filled.ModeNight)" 
            ThumbIconColor="Color.Dark"
            Color="Color.Inherit"
            Class="ma-4" T="bool"/>
        <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Inherit" Link="https://www.linkedin.com/in/tylah-kapa/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/tkapa" Target="_blank" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme _theme = new();
    private bool _isDarkMode;
}